<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_medium_2">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_medium"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact_phone"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:padding="@dimen/margin_medium"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/ivClose"/>

    <TextView
        android:id="@+id/btnPhoneOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:background="@drawable/background_rounded_primary_4"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_medium_2"
        android:drawableEnd="@drawable/ic_phone_white_24dp"
        android:text="+959799558126"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_below="@id/ivClose"/>

    <TextView
        android:id="@+id/btnPhoneTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:background="@drawable/background_rounded_primary_4"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_medium_2"
        android:drawableEnd="@drawable/ic_phone_white_24dp"
        android:text="+959770563828"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_below="@id/btnPhoneOne"/>

    <TextView
        android:id="@+id/btnPhoneThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:background="@drawable/background_rounded_primary_4"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_medium_2"
        android:drawableEnd="@drawable/ic_phone_white_24dp"
        android:text="+959 05029384"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_below="@id/btnPhoneTwo"/>

    <TextView
        android:id="@+id/btnPhoneFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:background="@drawable/background_rounded_primary_4"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_medium_2"
        android:drawableEnd="@drawable/ic_phone_white_24dp"
        android:text="+959 05029384"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_below="@id/btnPhoneThree"/>



</RelativeLayout>